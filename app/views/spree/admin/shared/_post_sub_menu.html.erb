<% content_for :sub_menu do %>
  <ul id="sub_nav" data-hook="admin_post_sub_tabs" class="inline-menu">
    <%= tab :posts,      :match_path => '/posts' %>
    <%= tab :categories, :match_path => '/categories' %>
    <%= tab :tags,       :match_path => '/tags' %>
    <%= tab :authors,    :match_path => '/authors' %>
    <% if can?(:manage, :blog_settings) %>
      <%= tab :blog_settings, :match_path => '/blog_settings', :url => edit_admin_blog_settings_path %>
    <% end %>
  </ul>
<% end %>

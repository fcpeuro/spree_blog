<%= render :partial => 'spree/admin/shared/post_sub_menu' %>

<% content_for :page_title do %>
  <%= Spree.t(:editing_category, scope: :blog) %> <span class="green">"<%= @category.name %>"</span>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Spree.t(:back_to_category_list, scope: :blog), spree.admin_categories_path, :icon => 'icon-arrow-left' %>
  </li>
<% end %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @category } %>

<%= form_for [:admin, @category], html: { multipart: true } do |f| %>
  <fieldset>
    <legend align="center"><%= Spree.t(:new_category, scope: :blog) %></legend>
    <%= render :partial => 'form', :locals => { :f => f } %>
    <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>
